<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_main"/>

    <FrameLayout
        android:id="@+id/content_main_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="upload_file"
            android:id="@+id/upload_file"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="common_api"
            android:id="@+id/common_api"
            android:layout_gravity="center_horizontal|bottom"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="transfer_list"
            android:id="@+id/transfer_list_btn"
            android:layout_gravity="right|center_vertical"/>
    </LinearLayout>

    <include layout="@layout/line_view"/>


    <LinearLayout
        android:id="@+id/tabs_main_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/personal_main_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/personal_main_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_filter_drama_black_36dp"/>

            <TextView
                android:id="@+id/personal_main_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/tabs_main_personal"
                android:textColor="@color/tab_main_selected"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/upload_main_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/upload_main_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/upload_48"/>

            <TextView
                android:id="@+id/upload_main_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/tabs_main_upload"
                android:textColor="@color/tab_main_unselected"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/star_main_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/star_main_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share_white_36dp"/>

            <TextView
                android:id="@+id/star_main_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/tabs_main_star"
                android:textColor="@color/tab_main_unselected"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/usercenter_main_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/usercenter_main_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/self_48"/>

            <TextView
                android:id="@+id/usercenter_main_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/tabs_main_usercenter"
                android:textColor="@color/tab_main_unselected"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
