<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_centerHorizontal="true"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_main_color"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/avatar_user_center_iv"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/icon_48"/>

        <TextView
            android:id="@+id/nick_name_user_center_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="昵称"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <ProgressBar
            android:id="@+id/capacity_user_center_pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/capacity_user_center_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="0GB/1000GB"
            android:textColor="@color/white"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/clear_cache_user_center_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_nomal_white_pressed_gray"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="清空缓存"
            android:textColor="@color/tab_main_unselected"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/size_cache_user_center_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="0.0MB"/>

    </RelativeLayout>


    <include layout="@layout/line_view"/>

    <RelativeLayout
        android:id="@+id/cache_location_user_center_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_nomal_white_pressed_gray"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="缓存路径"
            android:textColor="@color/tab_main_unselected"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/cache_location_user_center_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>

    <include
        android:id="@+id/cache_location_view"
        layout="@layout/line_view"/>

    <RelativeLayout
        android:id="@+id/version_code_user_center_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_nomal_white_pressed_gray"

        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="版本号"
            android:textColor="@color/tab_main_unselected"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/version_code_user_center_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="1.0.0"/>

    </RelativeLayout>

    <include layout="@layout/line_view"/>

    <RelativeLayout
        android:id="@+id/about_user_center_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_nomal_white_pressed_gray"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="关于我们"
            android:textColor="@color/tab_main_unselected"
            android:textSize="16sp"/>

    </RelativeLayout>

    <include layout="@layout/line_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/logout_user_center_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </RelativeLayout>


</LinearLayout>
